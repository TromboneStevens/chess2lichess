{
  "manifest_version": 3,
  "name": "Chess.com to Lichess Analysis",
  "version": "2.4",
  "description": "Adds a Lichess Analysis button to Chess.com and supports PGN export.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],
  "action": {
    "default_title": "Analyze on Lichess"
  },
  "background": {
    "scripts": [
      "src/background/lichess-client.js",
      "src/background/service-worker.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "css": ["src/ui/styles.css"],
      "js": [
        "src/utils/chess-parser.js", 
        "src/ui/button-manager.js", 
        "src/content/main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/icon.svg"],
      "matches": ["*://*.chess.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chess2lichess@example.com",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}